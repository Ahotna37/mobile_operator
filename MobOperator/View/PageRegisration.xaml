        </Grid.RowDefinitions>
        <Image Source="/Group 3 (1).png" Grid.Column="0" Grid.Row="0" Grid.RowSpan="15" VerticalAlignment="Center" HorizontalAlignment="left" />
        <TabControl Grid.Column="1" Grid.Row="1" Grid.RowSpan="9" >
            <TabItem Header="Физическое лицо">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="38*" />
                        <ColumnDefinition Width="105*" />
                        <ColumnDefinition Width="274*"/>
                        <ColumnDefinition Width="38*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>


                    </Grid.RowDefinitions>
                    <Label Grid.Column="1" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0.4,14,0,14.8">Имя
                    </Label>
                    <TextBox Grid.Column="1" Grid.Row="0" Margin="104.4,14,0,14.8" Grid.ColumnSpan="2"  />
                    <Label Grid.Column="1" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0.4,14.2,0,14.6">Дата рождения
