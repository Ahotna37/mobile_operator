                    <TextBox Grid.Column="1" Grid.Row="2" Margin="104.4,14.4,0,14.4" Grid.ColumnSpan="2" />
                    <Label Grid.Column="1" Grid.Row="3" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0.4,14.6,0,14.2">Пароль
                    </Label>
                    <TextBox Grid.Column="1" Grid.Row="3" Margin="104.4,14.6,0,14.2" Grid.ColumnSpan="2" />
                </Grid>
            </TabItem>
            <TabItem Header="Юридическое лицо">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.1*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="0.1*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>


                    </Grid.RowDefinitions>
                    <Label Grid.Column="1" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Left">Название организации
